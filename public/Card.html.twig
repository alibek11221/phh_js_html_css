{% extends 'CardBlanket.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ baseroute }}public/css/card.css">
    <link href="{{ baseroute }}public/css/style.css" rel="stylesheet">
    <link href="{{ baseroute }}public/css/main.css" rel="stylesheet">
    <link href="{{ baseroute }}public/css/vakansiya.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ baseroute }}public/css/blocks.css">
{% endblock %}

{% block content %}
    <div class="base">
        <div class="base-box" style="display:flex; justify-content: center; align-items: center">
            <form action="" class="form" style="width: 80%;">
                <label>
                    <span>Тестирование</span>
                    <select name="test" id="test">
                        <option value="0" selected>Выберите тест</option>
                        {% for test in tests %}
                            <option id="select_{{ test.test_id }}" year="{{ test.year_id }}"
                                    subject="{{ test.subject_code }}" value="{{ test.test_id }}">
                                {{ test.year }} - {{ test.subject }}
                            </option>
                        {% endfor %}
                    </select>
                </label>

            </form>

        </div>
        <div class="parent" id="razdels">
        </div>
        <div class="rating-box mx-1 mt-1" id="cards">

        </div>


    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://unpkg.com/axios/dist/axios.min.js" type="application/javascript"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    <script src="{{ baseroute }}public/js/apiCalls.js"></script>
    <script>
        const testsElement = $('#test');

        function setRazdelHandlers() {
            $('.razdel.current').each(function () {
                $(this).on('click', function () {
                    $('.selected').removeClass('selected');
                    if (!$(this).hasClass('selected')) {
                        $.get(`${baseUrl}/particips/${testsElement.val()}?razdel=${$(this).attr('razdel')}&passed=${$(this).attr('passed')}`)
                            .done(res => {
                                $('#cards').html(res);
                                setHandler();
                            });
                        $(this).addClass('selected');
                    }
                })
            })
        }

        testsElement.on('change', function () {
            if (testsElement.val() > 0) {
                $('#razdels').addClass('center');
                $('#razdels').removeClass('parent');
                $('#razdels').html('<div class="lds-dual-ring my-2"></div>');
                $.get(`${baseUrl}/razdels/${testsElement.val()}`)
                    .done(res => {
                        $('#razdels').removeClass('center');
                        $('#razdels').addClass('parent');
                        $('#razdels').html(res);
                        setRazdelHandlers();
                    })
                    .fail((jqXHR, textStatus) => {
                        $('#razdels').html('<h3>Ничего не найдено</h3>')
                    });
                getParticipants(testsElement.val()).then(function (res) {
                    if (res.length > 0) {
                        res.map(function (x) {
                            $('#cards').append(renderName(x));
                            setHandler(x);
                            let elem = $(`#select_${testsElement.val()}`);
                            getTest(elem.attr('year'), elem.attr('subject'), x.code).then(function (result) {
                                $(`#accord_${x.code}`).append(`<div class="accordion-content" id="${x.code}">${result}<div class="el-content my-2"></div></div>`);
                                setBlockHadnlers();
                            })
                        });
                    } else {
                        $('#cards').html('<h4>Ничего не найдено</h4>')
                    }
                })
            } else {
                $('#razdels').html('');
                $('#cards').html('');
            }
        });

        function setBlockHadnlers() {
            $('.element.ready').each(function () {
                $(this).on('click', function () {
                    let particip = $(this).parent().parent().attr('id');
                    let razdelId = $(this).attr('razdel');
                    getSubElements(razdelId).then(res => {
                        $(`#${particip} .el-content`).html(res);
                        setInputHandlers(id, particip)
                    })
                });
            });
        }

        function renderName(x) {
            return `<div class="accordion name my-1" id="accord_${x.code}">
                    <div class="accordion-name" id="block_${x.code}">
                        <p class="small font-weight-normal text-uppercase lts-2px"
                           style="cursor: pointer;"><b>${x.surname} ${x.name} ${x.secondname}</b>
                        </p>
                    </div>
                </div>`
        }


        function clearElems(particip) {
            $(`#${particip} .el-content`).fadeOut();
        }

        function setHandler() {
            $('.accordion-name').each(function () {
                $(this).on('click', function (e) {
                    e.preventDefault();
                    $(this).closest('.accordion').toggleClass('active');
                    $(this).closest('.accordion').find('.accordion-content').stop().slideToggle(500);
                })
            });

        }
    </script>
{% endblock %}
