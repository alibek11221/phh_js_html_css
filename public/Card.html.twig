{% extends 'CardBlanket.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ baseroute }}public/css/card.css">
    <link href="{{ baseroute }}public/css/style.css" rel="stylesheet">
    <link href="{{ baseroute }}public/css/main.css" rel="stylesheet">
    <link href="{{ baseroute }}public/css/vakansiya.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ baseroute }}public/css/blocks.css">
{% endblock %}

{% block content %}
    <div class="base">
        <div class="base-box" style="display:flex; justify-content: center; align-items: center">
            <form action="" class="form" style="width: 80%;">
                <label>
                    <span>Тестирование</span>
                    <select name="test" id="test">
                        <option value="0" selected>Выберите тест</option>
                        {% for test in tests %}
                            <option id="select_{{ test.test_id }}" year="{{ test.year_id }}"
                                    subject="{{ test.subject_code }}" value="{{ test.test_id }}">
                                {{ test.year }} - {{ test.subject }}
                            </option>
                        {% endfor %}
                    </select>
                </label>
            </form>
        </div>
        <div class="parent" id="razdels">
        </div>
        <div class="rating-box mx-1 mt-1" id="cards">
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://unpkg.com/axios/dist/axios.min.js" type="application/javascript"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    <script>
        const testsElement = $('#test');
        const razdelsElements = $('#razdels');

        function setRazdelHandlers() {
            $('.razdel.current').each(function () {
                $(this).on('click', function () {
                    if ($('.selected').length > 0 && $('.selected')[0] != $(this)[0]) {
                        $('.selected').removeClass('selected');
                    }
                    if (!$(this).hasClass('selected')) {
                        $(this).addClass('selected');
                        $('#cards').html('<div class="lds-dual-ring my-2" style="position: fixed"></div>');
                        $.get(`${baseUrl}/particips/${testsElement.val()}?razdel=${$(this).attr('razdel')}&passed=${$(this).attr('passed')}`)
                            .done(res => {
                                $('#cards').html(res);
                                setHandler();
                                if ($(this).attr('passed') < 1) {
                                    setInputHandlers($(this).attr('razdel'))
                                }
                            });
                    }
                })
            })
        }

        (function ($) {
            $.fn.inputFilter = function (inputFilter) {
                return this.on("input keydown keyup mousedown mouseup select contextmenu drop", function () {
                    if (inputFilter(this.value)) {
                        this.oldValue = this.value;
                        this.oldSelectionStart = this.selectionStart;
                        this.oldSelectionEnd = this.selectionEnd;
                    } else if (this.hasOwnProperty("oldValue")) {
                        this.value = this.oldValue;
                        this.setSelectionRange(this.oldSelectionStart, this.oldSelectionEnd);
                    } else {
                        this.value = "";
                    }
                });
            };
        }(jQuery));

        function setInputHandlers(razdel) {
            $('.ballsTeacher').each(function () {
                let max = parseInt($(this).attr('max'));
                $(this).inputFilter(function (value) {
                    return /^\d*$/.test(value) && (value === "" || (parseInt(value) <= max));
                });
            });
            $('.sub_elements').each(function () {
                $(this).on('submit', function (e) {
                    e.preventDefault();
                    let button = $(this).children('.send-button');
                    let message = $(this).children('#message');
                    let blocks = $(`#${$(this).attr('id')} .element-block`);
                    if (parseInt(button.attr('res')) === 0) {
                        let elements = {};
                        $.each(blocks, function () {
                            let subelem = {};
                            $.each($(this).find('.ballsTeacher'), function () {
                                subelem = {...subelem, [$(this).attr('subelement')]: $(this).val()};
                            });
                            elements = {...elements, [$(this).attr('element')]: subelem};
                        });
                        $.ajax({
                            type: "POST",
                            url: `${baseUrl}/intermediate/save`,
                            data: {
                                particip: $(this).attr('particip'),
                                test: testsElement.val(),
                                razdel: razdel,
                                marks: elements,
                            }
                        })
                            .done(function () {
                                console.log(message);
                                message.html('Данные успешно сохранены');
                                message.slideToggle(500);
                                $.each(blocks, function () {
                                    $.each($(this).find('.ballsTeacher'), function () {
                                        $(this).addClass('saved');
                                        $(this).attr('disabled', true);
                                    });
                                });
                                button.val('Изменить');
                                button.attr('res', 1);
                                setTimeout(() => {
                                    message.slideToggle(500);
                                }, 1500);
                            })
                            .fail(function () {
                                message.html('Что-то пошло не так, если эта ошибка появится снова свяжитесь с нами!');
                                message.slideToggle(500);
                                setTimeout(() => {
                                    message.slideToggle(500);
                                }, 1500);
                            });
                    } else {
                        $.each($(`#${$(this).attr('id')} .element-block`), function () {
                            $.each($(this).find('.ballsTeacher'), function () {
                                $(this).attr('disabled', false);
                                $(this).removeClass('saved');
                            });
                        });
                        button.attr('res', 0);
                        button.val('Сохранить')
                    }
                });
            });
        }

        testsElement.on('change', function () {
            if (testsElement.val() > 0) {
                razdelsElements.addClass('center');
                razdelsElements.removeClass('parent');
                razdelsElements.html('<div class="lds-dual-ring my-2"></div>');
                $.get(`${baseUrl}/razdels/${testsElement.val()}`)
                    .done(res => {
                        razdelsElements.removeClass('center');
                        razdelsElements.addClass('parent');
                        razdelsElements.html(res);
                        setRazdelHandlers();
                    })
                    .fail(() => {
                        $('#razdels').html('<h3>Ничего не найдено</h3>')
                    });
